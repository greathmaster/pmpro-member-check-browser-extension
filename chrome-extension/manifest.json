{
"manifest_version": 2,
    "name": "PMPro Member Check",
    "description": "A Chrome extension that highlights the email addresses of members on your PMPro site.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "all_frames": true,
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
